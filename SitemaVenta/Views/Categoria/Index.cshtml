@model List<Entidad.Categoria>
    @{
        ViewBag.title = "Lista de Categorias";
    }
<a href="~/Reportes/Reportes"></a>
<h2 class="text-center text-success">Listado de Clientes</h2>
<div class="well well-sm">
    <a class="btn btn-primary" href="~/Cliente/Create">Nuevo</a>
</div>
<table class="table table-hover table-striped">
    <thead class="text-capitalize text-center text-success">
        <tr class="bg-primary">
            <td>Nombre</td>
            <td>Descripcción</td>
            <td colspan="3">Operaciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var objcategoria in Model)
        {
            <tr>
                <td>
                    @objcategoria.Nombre
                </td>
                <td>
                    @objcategoria.Descripcion
                </td>
                <td><a class="btn btn-success" href="#"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="#"><span class="fa fa-edit></span></a></td>
                <td><a class="btn btn-danger" href="#"><span class="fa fa-book"></span></a></td>
            </tr>
        }
    </tbody>
</table>